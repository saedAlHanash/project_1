<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="19dp"
    android:paddingEnd="19dp"
   >

    <ImageView

        android:id="@+id/item_task_recycler_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@drawable/item_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/item_task_point"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@color/green"
        app:civ_border_color="#fff"
        app:civ_border_width="3dp"
        app:layout_constraintEnd_toEndOf="@+id/item_task_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/item_task_recycler_view" />

    <TextView
        android:id="@+id/item_task_tv_under_ImgV"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_task_recycler_view"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/item_task_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/item_task_recycler_view" />

</androidx.constraintlayout.widget.ConstraintLayout>