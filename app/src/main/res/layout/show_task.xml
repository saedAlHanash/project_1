<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_task"
    android:padding="10dp">

    <TextView
        android:id="@+id/show_task_date_start"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_date_start"
        android:drawablePadding="10dp"
        android:fontFamily="@font/autour_one"
        android:padding="5dp"
        android:text="date start"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_task_text" />

    <TextView
        android:id="@+id/show_task_time_end"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_date_end"
        android:drawablePadding="10dp"
        android:fontFamily="@font/autour_one"
        android:padding="5dp"
        android:text="date end"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_task_text" />


    <TextView
        android:id="@+id/show_task_time_reminding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_date_reminding"
        android:drawablePadding="10dp"
        android:fontFamily="@font/autour_one"
        android:padding="5dp"
        android:text="time reminding"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_task_time_end" />

    <CheckBox
        android:id="@+id/show_task_checkBox_done_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:text="it's Doin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_task_time_reminding"
        app:layout_constraintVertical_bias="0.435" />

    <Button
        android:id="@+id/show_task_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:background="#0001DFFF"
        android:text="Edit"
        android:textColor="#01DFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/show_task_checkBox_done_task"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_task_time_reminding" />

    <TextView
        android:id="@+id/show_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/autour_one"
        android:gravity="center"

        android:padding="5dp"
        android:text="title"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_task_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/autour_one"
        android:gravity="center"
        android:padding="5dp"
        android:text="text"

        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/show_task_title"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/show_task_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#0001DFFF"
        android:text="ok"
        android:textColor="#01DFFF"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_task_checkBox_done_task" />


</androidx.constraintlayout.widget.ConstraintLayout>